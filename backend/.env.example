# ========================================
# PeopleBooster Backend Environment Variables
# ========================================
# Copy this file to .env and fill in the values

# ========================================
# Application
# ========================================
NODE_ENV=development
PORT=3001
API_VERSION=v1
TZ=Asia/Tokyo

# ========================================
# Database (PostgreSQL)
# ========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/peoplebooster?schema=public

# ========================================
# Redis
# ========================================
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ========================================
# JWT Authentication
# ========================================
# IMPORTANT: Generate secure keys for production!
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-here-1234567890
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars-here-0987654321
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=peoplebooster
JWT_AUDIENCE=peoplebooster-api

# ========================================
# CORS
# ========================================
CORS_ORIGIN=http://localhost:3000

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Bcrypt
# ========================================
BCRYPT_SALT_ROUNDS=12

# ========================================
# SendGrid (Email Service)
# ========================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@peoplebooster.com
SENDGRID_FROM_NAME=PeopleBooster

# Email Templates
SENDGRID_TEMPLATE_WELCOME=d-xxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_PASSWORD_RESET=d-xxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_INVITATION=d-xxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_DIAGNOSIS_COMPLETE=d-xxxxxxxxxxxxxxxxxxxx

# ========================================
# AWS S3 (File Storage)
# ========================================
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=peoplebooster-uploads
AWS_S3_ENDPOINT=
AWS_S3_PRESIGNED_URL_EXPIRATION=3600

# ========================================
# Stripe (Payment Processing)
# ========================================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
