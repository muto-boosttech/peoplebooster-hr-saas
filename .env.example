# ========================================
# PeopleBooster Environment Variables
# ========================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# ========================================
# Application
# ========================================
NODE_ENV=development
TZ=Asia/Tokyo

# ========================================
# Ports
# ========================================
BACKEND_PORT=3001
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# ========================================
# PostgreSQL Database
# ========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=peoplebooster
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/peoplebooster?schema=public

# ========================================
# Redis
# ========================================
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379

# ========================================
# JWT Authentication
# ========================================
# IMPORTANT: Change these in production!
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-here-1234567890
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars-here-0987654321
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ========================================
# CORS
# ========================================
CORS_ORIGIN=http://localhost:3000

# ========================================
# SendGrid (Email Service)
# ========================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@peoplebooster.com
SENDGRID_FROM_NAME=PeopleBooster

# ========================================
# AWS S3 (File Storage)
# ========================================
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=peoplebooster-uploads
AWS_S3_ENDPOINT=

# ========================================
# Stripe (Payment Processing)
# ========================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# ========================================
# Frontend Public Variables
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_APP_NAME=PeopleBooster
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx

# ========================================
# Logging
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Session
# ========================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ========================================
