# ========================================
# PeopleBooster Frontend Environment Variables
# ========================================
# Copy this file to .env.local and fill in the values

# ========================================
# API Configuration
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1

# ========================================
# Application
# ========================================
NEXT_PUBLIC_APP_NAME=PeopleBooster
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=人と組織の最適なマッチングを科学する HR SaaS プラットフォーム

# ========================================
# Stripe (Payment Processing)
# ========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx

# ========================================
# Analytics (Optional)
# ========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ========================================
# Feature Flags
# ========================================
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_ATS=true
NEXT_PUBLIC_ENABLE_BILLING=true

# ========================================
# Sentry (Error Tracking - Optional)
# ========================================
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxx@sentry.io/xxxxxxx

# ========================================
# Development
# ========================================
# Enable polling for hot reload in Docker
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true
